}

/**
 * Retrieves the full list of installed CKEditor plugins.
 */
function ckeditor_plugins() {
  $plugins = module_invoke_all('ckeditor_plugins');
  backdrop_alter('ckeditor_plugins', $plugins);
  return $plugins;
}

