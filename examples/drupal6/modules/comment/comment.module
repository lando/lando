 * @param $mode
 *   Comment display mode.
 * @param $order
 *   Comment order mode.
 * @param $comments_per_page
 *   Comments per page.
 * @ingroup forms
 */
function comment_controls(&$form_state, $mode = COMMENT_MODE_THREADED_EXPANDED, $order = COMMENT_ORDER_NEWEST_FIRST, $comments_per_page = 50) {
  $form['mode'] = array('#type' => 'select',
